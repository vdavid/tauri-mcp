{
  "name": "@vdavid/tauri-mcp",
  "version": "0.1.0",
  "description": "MCP server for Tauri v2 app automation",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "tauri-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vdavid/tauri-mcp.git",
    "directory": "packages/server"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "author": "vdavid",
  "license": "MIT OR Apache-2.0",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "tauri",
    "automation",
    "screenshot",
    "testing",
    "debugging"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "ws": "^8.19.0",
    "zod": "^3.24.0",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/ws": "^8.18.1",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
